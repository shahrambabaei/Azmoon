<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.SplashActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".55"
        android:gravity="center">

        <ImageView
            android:id="@+id/activity_splash_img1"
            android:layout_width="270dp"
            android:layout_height="270dp"
            app:srcCompat="@drawable/logo_yahoo" />
    </LinearLayout>


    <TextView
        android:id="@+id/activity_splash_txt3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:fontFamily="@font/vazir_bold"
        android:gravity="bottom|center"
        android:text="@string/Splash_Input"
        android:textSize="50sp"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:gravity="center"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/activity_splash_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/vazir_medium"
                android:gravity="end"
                android:text="..."
                android:textColor="@color/color_sollow"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/activity_splash_txt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vazir_medium"
                android:gravity="end"
                android:text="."
                android:textColor="@color/black"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="@id/activity_splash_txt1"
                app:layout_constraintEnd_toEndOf="@id/activity_splash_txt1"
                app:layout_constraintStart_toStartOf="@id/activity_splash_txt1"
                app:layout_constraintTop_toTopOf="@id/activity_splash_txt1" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>


</LinearLayout>